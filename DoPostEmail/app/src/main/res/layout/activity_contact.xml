<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_contact"
        layout="@layout/toolbar_contact">

    </include>

    <EditText
        android:id="@+id/firstNameEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="First Name"
        android:layout_marginTop="80dp"
        android:text="" />

    <EditText
        android:id="@+id/lastNameEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Last Name"
        android:layout_below="@id/firstNameEdit"
        android:layout_marginTop="10dp"
        android:text="" />

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Username"
        android:layout_below="@id/lastNameEdit"
        android:layout_marginTop="10dp"
        android:text="" />

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Email"
        android:layout_below="@id/usernameEdit"
        android:layout_marginTop="10dp"
        android:text="" />

    <EditText
        android:id="@+id/formatEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Email"
        android:layout_below="@id/emailEdit"
        android:layout_marginTop="10dp"
        android:text="" />

</RelativeLayout>