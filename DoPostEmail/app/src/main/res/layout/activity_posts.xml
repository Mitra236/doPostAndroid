<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_create_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Email"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/button_create_folder"
        android:layout_width="118dp"
        android:layout_height="59dp"
        android:text="Create Folder"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/button_email"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:text="Email" />

    <Button
        android:id="@+id/button_folders"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Folders" />

    <Button
        android:id="@+id/button_folder"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Folder" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Settings" />

    <Button
        android:id="@+id/button_profile"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Profile" />

    <Button
        android:id="@+id/button_contacts"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Contacts" />
</LinearLayout>