<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/button_create_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Email"
        tools:layout_editor_absoluteX="41dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/button_create_folder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Folder"
        tools:layout_editor_absoluteX="41dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/button_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email" />

    <Button
        android:id="@+id/button_folders"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Folders" />

    <Button
        android:id="@+id/button_folder"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Folder" />

    <Button
        android:id="@+id/button_settings"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Settings" />

    <Button
        android:id="@+id/button_profile"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Profile" />

    <Button
        android:id="@+id/button_contacts"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Contacts" />

    <Button
        android:id="@+id/button_contact"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Contact" />

    <Button
        android:id="@+id/button_create_contact"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Contact" />


    </LinearLayout>

</ScrollView>