<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="REFRESH INTERVAL"
        android:key="refresh_setting">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_refresh"
            android:title="@string/pref_refresh_title">

        </CheckBoxPreference>

        <ListPreference
            android:key="@string/pref_refresh_list"
            android:title="@string/pref_refreshList_title"
            android:dialogTitle="@string/pref_refreshList"
            android:dependency="@string/pref_refresh"
            android:entries="@array/pref_refreshInterval_entries"
            android:entryValues="@array/pref_refreshInterval_values"
            android:summary="%s"
            android:defaultValue="1">

        </ListPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="DATE SORTING"
        android:key="date_sorting_setting">

        <ListPreference
            android:key="@string/pref_date_sorting_list"
            android:title="@string/pref_date_sorting_title"
            android:entryValues="@array/pref_dateSorting_values"
            android:dialogTitle="@string/pref_sortingList"
            android:entries="@array/pref_dateSorting_entries"
            android:summary="%s"
            android:defaultValue="Ascending">

        </ListPreference>


    </PreferenceCategory>

</PreferenceScreen>